<Window x:Class="GreenChainz.Revit.UI.ScorecardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sustainability Scorecard" Height="700" Width="900"
        WindowStartupLocation="CenterScreen" Background="#FAFAFA">

    <Window.Resources>
        <Style x:Key="GradeBox" TargetType="Border">
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="10"/>
        </Style>
        <Style x:Key="MetricTitle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="#666"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>
        <Style x:Key="MetricValue" TargetType="TextBlock">
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
        <Style x:Key="MetricGrade" TargetType="TextBlock">
            <Setter Property="FontSize" Value="48"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="SUSTAINABILITY SCORECARD" FontSize="24" FontWeight="Bold" Foreground="#1B5E20"/>
            <TextBlock x:Name="ProjectNameText" Text="Project Name" FontSize="14" Foreground="#666"/>
        </StackPanel>

        <!-- Overall Grade -->
        <Border Grid.Row="1" x:Name="OverallGradeBorder" Style="{StaticResource GradeBox}" Background="#E8F5E9" HorizontalAlignment="Center" MinWidth="200">
            <StackPanel HorizontalAlignment="Center">
                <TextBlock Text="OVERALL GRADE" Style="{StaticResource MetricTitle}" HorizontalAlignment="Center"/>
                <TextBlock x:Name="OverallGradeText" Text="A" Style="{StaticResource MetricGrade}" Foreground="#1B5E20"/>
                <TextBlock x:Name="OverallScoreText" Text="Score: 85/100" FontSize="14" HorizontalAlignment="Center" Foreground="#666"/>
            </StackPanel>
        </Border>

        <!-- Three Key Metrics -->
        <Grid Grid.Row="2" Margin="0,20,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- EPD Coverage -->
            <Border Grid.Column="0" Style="{StaticResource GradeBox}" Background="White" BorderBrush="#E0E0E0" BorderThickness="1">
                <StackPanel>
                    <TextBlock Text="EPD COVERAGE" Style="{StaticResource MetricTitle}"/>
                    <TextBlock x:Name="EpdGradeText" Text="B" Style="{StaticResource MetricValue}" Foreground="#FF9800"/>
                    <TextBlock x:Name="EpdValueText" Text="65% Coverage" FontSize="16" Margin="0,5,0,0"/>
                    <TextBlock x:Name="EpdDetailText" Text="13 of 20 materials" FontSize="12" Foreground="#999"/>
                    <TextBlock x:Name="EpdStatusText" Text="LEED Compliant" FontSize="11" Foreground="#4CAF50" FontWeight="Bold" Margin="0,10,0,0"/>
                </StackPanel>
            </Border>

            <!-- Embodied Carbon (GWP) -->
            <Border Grid.Column="1" Style="{StaticResource GradeBox}" Background="White" BorderBrush="#E0E0E0" BorderThickness="1">
                <StackPanel>
                    <TextBlock Text="EMBODIED CARBON (GWP)" Style="{StaticResource MetricTitle}"/>
                    <TextBlock x:Name="GwpGradeText" Text="A" Style="{StaticResource MetricValue}" Foreground="#4CAF50"/>
                    <TextBlock x:Name="GwpValueText" Text="125,000 kgCO2e" FontSize="16" Margin="0,5,0,0"/>
                    <TextBlock x:Name="GwpIntensityText" Text="45.2 kgCO2e/m2" FontSize="12" Foreground="#999"/>
                    <TextBlock x:Name="GwpReductionText" Text="25% below baseline" FontSize="11" Foreground="#4CAF50" FontWeight="Bold" Margin="0,10,0,0"/>
                </StackPanel>
            </Border>

            <!-- Verification Tier -->
            <Border Grid.Column="2" Style="{StaticResource GradeBox}" Background="White" BorderBrush="#E0E0E0" BorderThickness="1">
                <StackPanel>
                    <TextBlock Text="VERIFICATION TIER" Style="{StaticResource MetricTitle}"/>
                    <TextBlock x:Name="TierText" Text="GOLD" Style="{StaticResource MetricValue}" Foreground="#FFC107"/>
                    <TextBlock x:Name="TierBreakdownText" Text="EPD Available" FontSize="16" Margin="0,5,0,0"/>
                    <TextBlock x:Name="TierDetailText" Text="P:2 | G:10 | S:5 | N:3" FontSize="12" Foreground="#999"/>
                    <TextBlock Text="Third-Party Verified" FontSize="11" Foreground="#4CAF50" FontWeight="Bold" Margin="0,10,0,0"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Material Breakdown -->
        <Border Grid.Row="3" Background="White" CornerRadius="8" Margin="0,20,0,0" Padding="15" BorderBrush="#E0E0E0" BorderThickness="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <TextBlock Text="MATERIAL BREAKDOWN" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>
                
                <DataGrid Grid.Row="1" x:Name="MaterialsDataGrid" AutoGenerateColumns="False" IsReadOnly="True" 
                          CanUserAddRows="False" GridLinesVisibility="Horizontal" AlternatingRowBackground="#FAFAFA"
                          BorderThickness="0" FontSize="12">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Material" Binding="{Binding Name}" Width="*"/>
                        <DataGridTextColumn Header="Category" Binding="{Binding Category}" Width="80"/>
                        <DataGridTextColumn Header="Qty (m3)" Binding="{Binding Quantity, StringFormat=N2}" Width="70"/>
                        <DataGridTextColumn Header="GWP" Binding="{Binding GwpDisplay}" Width="100"/>
                        <DataGridTextColumn Header="Total kgCO2e" Binding="{Binding TotalGwpDisplay}" Width="100"/>
                        <DataGridTextColumn Header="EPD" Binding="{Binding EpdStatus}" Width="90">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding HasEpd}" Value="True">
                                            <Setter Property="Foreground" Value="Green"/>
                                            <Setter Property="FontWeight" Value="Bold"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Tier" Binding="{Binding TierDisplay}" Width="70"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>

        <!-- Footer -->
        <Grid Grid.Row="4" Margin="0,15,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <StackPanel Grid.Column="0" Orientation="Horizontal">
                <Border Background="#E3F2FD" CornerRadius="4" Padding="10,5" Margin="0,0,10,0">
                    <TextBlock x:Name="LeedPointsText" Text="Est. LEED Points: 4" FontWeight="Bold" Foreground="#1565C0"/>
                </Border>
                <Border x:Name="BuyCleanBorder" Background="#E8F5E9" CornerRadius="4" Padding="10,5">
                    <TextBlock x:Name="BuyCleanText" Text="Buy Clean: Compliant" FontWeight="Bold" Foreground="#2E7D32"/>
                </Border>
            </StackPanel>
            
            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <Button Content="Export PDF" Click="ExportPdf_Click" Padding="15,8" Margin="0,0,10,0" Background="#1B5E20" Foreground="White"/>
                <Button Content="Close" Click="Close_Click" Padding="15,8"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
