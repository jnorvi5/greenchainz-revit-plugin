<Window x:Class="GreenChainz.Revit.UI.CreateRFQDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Create RFQ - GreenChainz" Height="650" Width="550" WindowStartupLocation="CenterScreen">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="150"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Submit Request for Quote" FontSize="18" FontWeight="Bold" Margin="0,0,0,15" Grid.Row="0" Foreground="#1B5E20"/>

        <Grid Grid.Row="1" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0" Margin="0,0,5,0">
                <Label Content="Project Name:" FontWeight="Bold"/>
                <TextBox Name="ProjectNameTextBox"/>
            </StackPanel>
            <StackPanel Grid.Column="1" Margin="5,0,0,0">
                <Label Content="Delivery Date:" FontWeight="Bold"/>
                <DatePicker Name="DeliveryDatePicker"/>
            </StackPanel>
        </Grid>

        <StackPanel Grid.Row="2" Margin="0,0,0,10">
            <Label Content="Project Address:" FontWeight="Bold"/>
            <TextBox Name="ProjectAddressTextBox"/>
        </StackPanel>

        <Label Content="Materials from Model:" Grid.Row="3" FontWeight="Bold"/>
        <DataGrid Name="MaterialsDataGrid" Grid.Row="4" AutoGenerateColumns="False" CanUserAddRows="True" 
                  Margin="0,0,0,10" AlternatingRowBackground="#F5F5F5">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Material Name" Binding="{Binding MaterialName}" Width="*"/>
                <DataGridTextColumn Header="Quantity" Binding="{Binding Quantity}" Width="70"/>
                <DataGridTextColumn Header="Unit" Binding="{Binding Unit}" Width="60"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="5" Margin="0,0,0,10">
            <Label Content="Special Instructions:" FontWeight="Bold"/>
            <TextBox Name="SpecialInstructionsTextBox" Height="50" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto"/>
        </StackPanel>

        <Label Content="Matched Sustainable Suppliers:" Grid.Row="6" FontWeight="Bold"/>
        <DataGrid Name="SuppliersDataGrid" Grid.Row="7" AutoGenerateColumns="False" IsReadOnly="True" 
                  Height="120" Margin="0,0,0,10" AlternatingRowBackground="#E8F5E9">
            <DataGrid.Columns>
                <DataGridCheckBoxColumn Header="" Binding="{Binding IsSelected}" Width="30"/>
                <DataGridTextColumn Header="Supplier" Binding="{Binding Name}" Width="150"/>
                <DataGridTextColumn Header="Score" Binding="{Binding SustainabilityScore}" Width="50"/>
                <DataGridTextColumn Header="Certifications" Binding="{Binding CertificationsDisplay}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <TextBlock x:Name="StatusText" Grid.Row="8" Text="" Foreground="Gray" FontStyle="Italic" Margin="0,5,0,5"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Grid.Row="9">
            <Button Name="FindSuppliersButton" Content="Find Suppliers" Click="FindSuppliersButton_Click" Padding="12,6" Margin="0,0,10,0" Background="#FF9800" Foreground="White"/>
            <Button Name="SubmitButton" Content="Submit RFQ" Click="SubmitButton_Click" Padding="12,6" Margin="0,0,10,0" Background="#4CAF50" Foreground="White"/>
            <Button Name="CancelButton" Content="Cancel" Click="CancelButton_Click" Padding="12,6"/>
        </StackPanel>
    </Grid>
</Window>
