<Window x:Class="GreenChainz.Revit.UI.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="About GreenChainz" Height="400" Width="450"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" HorizontalAlignment="Center" Margin="0,0,0,20">
            <TextBlock Text="GreenChainz" FontSize="28" FontWeight="Bold" Foreground="#1B5E20" HorizontalAlignment="Center"/>
            <TextBlock Text="Sustainable Materials Plugin for Revit" FontSize="14" Foreground="Gray" HorizontalAlignment="Center"/>
            <TextBlock x:Name="VersionText" Text="Version 1.0.0" FontSize="12" Foreground="Gray" HorizontalAlignment="Center" Margin="0,5,0,0"/>
        </StackPanel>

        <!-- Features -->
        <Border Grid.Row="1" Background="#E8F5E9" CornerRadius="8" Padding="15" Margin="0,0,0,15">
            <StackPanel>
                <TextBlock Text="Features" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>
                <TextBlock Text="Carbon Audit with EC3 real data" Margin="0,2"/>
                <TextBlock Text="LEED v4.1 and v5 Certification Calculator" Margin="0,2"/>
                <TextBlock Text="MRpc132 Embodied Carbon Credit" Margin="0,2"/>
                <TextBlock Text="Sustainable Supplier Database (15+)" Margin="0,2"/>
                <TextBlock Text="RFQ to EPD-Certified Suppliers" Margin="0,2"/>
                <TextBlock Text="PDF Export for Reports" Margin="0,2"/>
            </StackPanel>
        </Border>

        <!-- Data Sources -->
        <Border Grid.Row="2" Background="#FFF3E0" CornerRadius="8" Padding="15">
            <StackPanel>
                <TextBlock Text="Data Sources" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>
                <TextBlock Text="EC3 Building Transparency API" Margin="0,2"/>
                <TextBlock Text="UW Carbon Leadership Forum (CLF) v2021" Margin="0,2"/>
                <TextBlock Text="Autodesk Platform Services" Margin="0,2"/>
                <TextBlock Text="USGBC LEED v4.1 and v5 Standards" Margin="0,2"/>
                <TextBlock Text="" Margin="0,10,0,0"/>
                <TextBlock x:Name="StatusText" Text="Status: Connected" Foreground="Green" FontWeight="Bold"/>
            </StackPanel>
        </Border>

        <!-- Buttons -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,15,0,0">
            <Button Content="EC3 Database" Click="OpenEC3_Click" Padding="12,6" Margin="0,0,10,0" Background="#FF5722" Foreground="White"/>
            <Button Content="USGBC LEED" Click="OpenUSGBC_Click" Padding="12,6" Margin="0,0,10,0" Background="#4CAF50" Foreground="White"/>
            <Button Content="Close" IsCancel="True" Padding="12,6" Width="80"/>
        </StackPanel>
    </Grid>
</Window>
