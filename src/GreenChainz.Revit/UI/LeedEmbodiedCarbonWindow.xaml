<Window x:Class="GreenChainz.Revit.UI.LeedEmbodiedCarbonWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="LEED v4.1 MRpc132 - Embodied Carbon" Height="750" Width="950"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,15">
            <TextBlock Text="LEED v4.1 MRpc132 Pilot Credit" FontSize="24" FontWeight="Bold"/>
            <TextBlock Text="Procurement of Low Carbon Construction Materials" FontSize="14" Foreground="Gray"/>
            <TextBlock x:Name="ProjectNameText" Text="Project Name" FontSize="12" Foreground="Gray" Margin="0,5,0,0"/>
        </StackPanel>

        <!-- Summary Cards -->
        <Grid Grid.Row="1" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Points Earned -->
            <Border Grid.Column="0" CornerRadius="8" Padding="15" Margin="5" x:Name="PointsBadge" Background="#4CAF50">
                <StackPanel HorizontalAlignment="Center">
                    <TextBlock Text="Points Earned" FontSize="11" Foreground="White" HorizontalAlignment="Center"/>
                    <TextBlock x:Name="PointsText" Text="0/2" FontSize="32" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- Percent Reduction -->
            <Border Grid.Column="1" CornerRadius="8" Background="#2196F3" Padding="15" Margin="5">
                <StackPanel HorizontalAlignment="Center">
                    <TextBlock Text="Carbon Reduction" FontSize="11" Foreground="White" HorizontalAlignment="Center"/>
                    <TextBlock x:Name="ReductionText" Text="0%" FontSize="32" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- bECI Baseline -->
            <Border Grid.Column="2" CornerRadius="8" Background="#FF9800" Padding="15" Margin="5">
                <StackPanel HorizontalAlignment="Center">
                    <TextBlock Text="bECIb (Baseline)" FontSize="11" Foreground="White" HorizontalAlignment="Center"/>
                    <TextBlock x:Name="BaselineText" Text="0" FontSize="24" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
                    <TextBlock Text="kgCO2e/sf" FontSize="10" Foreground="White" HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- bECI Actual -->
            <Border Grid.Column="3" CornerRadius="8" Background="#9C27B0" Padding="15" Margin="5">
                <StackPanel HorizontalAlignment="Center">
                    <TextBlock Text="bECIa (Actual)" FontSize="11" Foreground="White" HorizontalAlignment="Center"/>
                    <TextBlock x:Name="ActualText" Text="0" FontSize="24" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
                    <TextBlock Text="kgCO2e/sf" FontSize="10" Foreground="White" HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Credit Status -->
        <Border Grid.Row="2" Background="#E8F5E9" CornerRadius="5" Padding="15" Margin="0,0,0,15">
            <StackPanel>
                <TextBlock Text="Credit Status" FontWeight="Bold" FontSize="14"/>
                <TextBlock x:Name="StatusText" Text="Status" FontSize="12" Margin="0,5,0,0"/>
                <TextBlock x:Name="RecommendationText" Text="Recommendation" FontSize="11" Foreground="Gray" Margin="0,5,0,0" TextWrapping="Wrap"/>
            </StackPanel>
        </Border>

        <!-- Material Breakdown Table -->
        <DockPanel Grid.Row="3">
            <TextBlock Text="Material Carbon Breakdown (per CLF v2021)" DockPanel.Dock="Top" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>
            <DataGrid x:Name="MaterialsDataGrid" AutoGenerateColumns="False" IsReadOnly="True" 
                      CanUserAddRows="False" GridLinesVisibility="Horizontal"
                      AlternatingRowBackground="#F5F5F5" FontSize="11">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Category" Binding="{Binding MaterialCategory}" Width="120"/>
                    <DataGridTextColumn Header="Material" Binding="{Binding MaterialName}" Width="*"/>
                    <DataGridTextColumn Header="Quantity" Binding="{Binding QuantityDisplay}" Width="90"/>
                    <DataGridTextColumn Header="mECIb" Binding="{Binding BaselineECI, StringFormat=N1}" Width="70">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Right"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="Baseline CO2" Binding="{Binding BaselineCarbonDisplay}" Width="100">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Right"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="Actual CO2" Binding="{Binding ActualCarbonDisplay}" Width="100">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Right"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="Reduction" Binding="{Binding PercentReduction, StringFormat={}{0:F1}%}" Width="80">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Right"/>
                                <Setter Property="Foreground" Value="Green"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="EPD Source" Binding="{Binding EPDSource}" Width="120"/>
                </DataGrid.Columns>
            </DataGrid>
        </DockPanel>

        <!-- Totals -->
        <Border Grid.Row="4" Background="#ECEFF1" Padding="10" Margin="0,10,0,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" x:Name="TotalBaselineText" Text="Total Baseline: 0 kgCO2e" FontWeight="Bold"/>
                <TextBlock Grid.Column="1" x:Name="TotalActualText" Text="Total Actual: 0 kgCO2e" FontWeight="Bold" HorizontalAlignment="Center"/>
                <TextBlock Grid.Column="2" x:Name="BuildingAreaText" Text="Building Area: 0 sf" FontWeight="Bold" HorizontalAlignment="Right"/>
            </Grid>
        </Border>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Find EPDs (EC3)" Click="FindEPDs_Click" Padding="15,8" Margin="0,0,10,0" Background="#FF5722" Foreground="White"/>
            <Button Content="Export bECI Report" Click="ExportReport_Click" Padding="15,8" Margin="0,0,10,0"/>
            <Button Content="Close" Click="Close_Click" Padding="15,8"/>
        </StackPanel>
    </Grid>
</Window>
