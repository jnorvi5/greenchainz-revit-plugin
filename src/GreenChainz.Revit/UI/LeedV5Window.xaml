<Window x:Class="GreenChainz.Revit.UI.LeedV5Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="LEED v5 BD+C Analysis" Height="800" Width="1100"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,15">
            <TextBlock Text="LEED v5 BD+C: New Construction" FontSize="24" FontWeight="Bold" Foreground="#1B5E20"/>
            <TextBlock x:Name="ProjectNameText" Text="Project Name" FontSize="14" Foreground="Gray"/>
        </StackPanel>

        <!-- Summary Cards -->
        <Grid Grid.Row="1" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Certification -->
            <Border Grid.Column="0" CornerRadius="8" Padding="15" Margin="5" x:Name="CertBadge" Background="#4CAF50">
                <StackPanel HorizontalAlignment="Center">
                    <TextBlock Text="Certification" FontSize="11" Foreground="White" HorizontalAlignment="Center"/>
                    <TextBlock x:Name="CertLevelText" Text="GOLD" FontSize="24" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- Points -->
            <Border Grid.Column="1" CornerRadius="8" Background="#2196F3" Padding="15" Margin="5">
                <StackPanel HorizontalAlignment="Center">
                    <TextBlock Text="Points Earned" FontSize="11" Foreground="White" HorizontalAlignment="Center"/>
                    <TextBlock x:Name="PointsText" Text="0/110" FontSize="24" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- Prerequisites -->
            <Border Grid.Column="2" CornerRadius="8" Background="#FF9800" Padding="15" Margin="5">
                <StackPanel HorizontalAlignment="Center">
                    <TextBlock Text="Prerequisites" FontSize="11" Foreground="White" HorizontalAlignment="Center"/>
                    <TextBlock x:Name="PrereqText" Text="0/0" FontSize="24" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- Score % -->
            <Border Grid.Column="3" CornerRadius="8" Background="#9C27B0" Padding="15" Margin="5">
                <StackPanel HorizontalAlignment="Center">
                    <TextBlock Text="Score" FontSize="11" Foreground="White" HorizontalAlignment="Center"/>
                    <TextBlock x:Name="ScoreText" Text="0%" FontSize="24" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Credits TreeView/DataGrid -->
        <TabControl Grid.Row="2">
            <TabItem Header="All Credits">
                <DataGrid x:Name="CreditsDataGrid" AutoGenerateColumns="False" IsReadOnly="True" 
                          CanUserAddRows="False" GridLinesVisibility="Horizontal"
                          AlternatingRowBackground="#F5F5F5" FontSize="11">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Code" Binding="{Binding Code}" Width="70"/>
                        <DataGridTextColumn Header="Credit" Binding="{Binding Name}" Width="*"/>
                        <DataGridTextColumn Header="Points" Binding="{Binding PointsDisplay}" Width="80">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                    <Setter Property="FontWeight" Value="Bold"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="120">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Status}" Value="Met">
                                            <Setter Property="Foreground" Value="Green"/>
                                            <Setter Property="FontWeight" Value="Bold"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding Status}" Value="Achieved">
                                            <Setter Property="Foreground" Value="Green"/>
                                            <Setter Property="FontWeight" Value="Bold"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding Status}" Value="Not Met">
                                            <Setter Property="Foreground" Value="Red"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding Status}" Value="Partial">
                                            <Setter Property="Foreground" Value="Orange"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Details" Binding="{Binding Description}" Width="250"/>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>
            
            <TabItem Header="By Category">
                <TreeView x:Name="CategoryTreeView" FontSize="12">
                    <TreeView.ItemTemplate>
                        <HierarchicalDataTemplate ItemsSource="{Binding Credits}">
                            <TextBlock>
                                <Run Text="{Binding Code}" FontWeight="Bold"/>
                                <Run Text=" - "/>
                                <Run Text="{Binding Name}"/>
                                <Run Text=" ("/>
                                <Run Text="{Binding TotalPoints}"/>
                                <Run Text="/"/>
                                <Run Text="{Binding MaxPoints}"/>
                                <Run Text=" pts)"/>
                            </TextBlock>
                            <HierarchicalDataTemplate.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding Code}" Width="60" FontWeight="Bold"/>
                                        <TextBlock Text="{Binding Name}" Width="250"/>
                                        <TextBlock Text="{Binding PointsDisplay}" Width="60" HorizontalAlignment="Center"/>
                                        <TextBlock Text="{Binding Status}" Width="100" Foreground="Gray"/>
                                    </StackPanel>
                                </DataTemplate>
                            </HierarchicalDataTemplate.ItemTemplate>
                        </HierarchicalDataTemplate>
                    </TreeView.ItemTemplate>
                </TreeView>
            </TabItem>

            <TabItem Header="Carbon Focus">
                <StackPanel Margin="20">
                    <TextBlock Text="LEED v5 Carbon Requirements" FontSize="18" FontWeight="Bold" Margin="0,0,0,15"/>
                    
                    <Border Background="#E8F5E9" Padding="15" CornerRadius="5" Margin="0,0,0,10">
                        <StackPanel>
                            <TextBlock Text="IPp3: Carbon Assessment (Required)" FontWeight="Bold" FontSize="14"/>
                            <TextBlock x:Name="CarbonAssessmentStatus" Text="Status" Margin="0,5,0,0"/>
                        </StackPanel>
                    </Border>
                    
                    <Border Background="#E3F2FD" Padding="15" CornerRadius="5" Margin="0,0,0,10">
                        <StackPanel>
                            <TextBlock Text="MRp2: Quantify and Assess Embodied Carbon (Required)" FontWeight="Bold" FontSize="14"/>
                            <TextBlock x:Name="EmbodiedCarbonStatus" Text="Status" Margin="0,5,0,0"/>
                        </StackPanel>
                    </Border>
                    
                    <Border Background="#FFF3E0" Padding="15" CornerRadius="5" Margin="0,0,0,10">
                        <StackPanel>
                            <TextBlock Text="MRc2: Reduce Embodied Carbon (Up to 6 points)" FontWeight="Bold" FontSize="14"/>
                            <TextBlock x:Name="ReduceEmbodiedStatus" Text="Status" Margin="0,5,0,0"/>
                        </StackPanel>
                    </Border>

                    <TextBlock Text="LEED v5 emphasizes whole-building life cycle assessment and decarbonization." 
                               FontStyle="Italic" Foreground="Gray" Margin="0,20,0,0" TextWrapping="Wrap"/>
                </StackPanel>
            </TabItem>
        </TabControl>

        <!-- Actions -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Content="USGBC LEED v5" Click="OpenUSGBC_Click" Padding="15,8" Margin="0,0,10,0" Background="#1B5E20" Foreground="White"/>
            <Button Content="Export Report" Click="ExportReport_Click" Padding="15,8" Margin="0,0,10,0"/>
            <Button Content="Close" Click="Close_Click" Padding="15,8"/>
        </StackPanel>
    </Grid>
</Window>
